<style>
  body {
    font-family: 'Playpen Sans', cursive !important;
    font-family: 'Plus Jakarta Sans', sans-serif !important;
    color: #ffffff;
    /* Dark text color */
    background-color: #ffffff;
    /* Light background color */
  }

  .navbar {
    background-color: rgb(255, 255, 255);
    /* Adjust opacity for the desired effect */
    backdrop-filter: blur(20px);
    /* Apply blur effect */
    transition: all 1.6s ease;
    /* Smooth transition effect */
  }

  .navbar:hover {
    background-color: rgba(126, 10, 251, 0.9);
    /* Adjust opacity for hover effect */
  }


  .navbar-brand {
    color: #333;
    /* Dark text color */
    font-size: 1.5rem;
  }

  .navbar-toggler {
    border-color: #333;
    /* Dark border color */
  }

  .navbar-nav .nav-link {
    color: #333;
    /* Dark text color */
    margin-right: 1rem;
    font-weight: bold;
  }

  .navbar-nav .nav-link:hover {
    color: #5bc0de;
    /* Lighter hover color */
  }

  .navbar-nav .dropdown-menu {
    background-color: #ffffff;
    /* Light background color */
    border-color: #5bc0de;
    /* Accent color */
  }

  .navbar-nav .dropdown-item {
    color: #333;
    /* Dark text color */
  }

  .navbar-nav .dropdown-item:hover {
    background-color: #5bc0de;
    /* Accent color on hover */
    color: #ffffff;
    /* Light text color */
  }

  .navbar-nav .search-btn {
    background-color: #ffffff;
    /* Dark button color */
    color: #fff;
    /* Light text color */
    border-radius: 25px;
    padding: 0.5rem 1rem;
  }

  .navbar-nav .search-btn:hover {
    background-color: #ffffff;
    /* Darker hover color */
  }

  .navbar-nav .search-inp {
    border-radius: 25px;
    padding: 0.5rem 3rem 0.5rem 3rem;
    font-size: 1rem;
  }

  .navbar-collapse {
    background-color: #ffffff;
    /* Light background color */
  }

  .navbar-nav.login-btns .nav-link {
    margin-right: 0;
  }

  .navbar-brand.logged-in {
    color: #5bc0de;
    /* Accent color */
    font-size: 1.8rem;
  }

  .navbar-nav.logged-in .nav-link {
    color: #5bc0de;
    /* Accent color */
  }

  .navbar-nav.logged-in .nav-link:hover {
    color: #ffffff;
    /* Light text color on hover */
  }

  .navbar-nav.logged-in .search-btn {
    background-color: #5bc0de;
    /* Accent color */
    border-color: #5bc0de;
    /* Accent color */
  }

  .navbar-nav.logged-in .search-btn:hover {
    background-color: #48a1c9;
    /* Darker hover color */
    border-color: #48a1c9;
    /* Darker hover border color */
  }

  .navbar-nav.logged-in .search-inp {
    border-color: #5bc0de;
    /* Accent color */
  }

  .navbar-nav.logged-in .logout-link {
    color: #ffffff;
    /* Danger color */
  }
</style>


<nav class="navbar navbar-expand-md navbar-light bg-body-light sticky-top border-bottom">
  <% if (!currentUser ) { %>
    <div class="container-fluid">

      <a class="navbar-brand" href="/"><i class="fa-regular fa-compass"></i></a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="/user/${req.user._id}">Home</a>
          </li>
        </ul>
        <div class="navbar-nav ms-auto login-btns" id="navbarNav">
          <% if(!currentUser){ %>
            <a class="nav-link" aria-current="page" href="/signup">Sign-up</a>
            <a class="nav-link" href="/login">Login</a>
            <% } %>
        </div>
      </div>
    </div>
    <% } else { %>
      <div class="container-fluid">
        <a class="navbar-brand" href="/"><i class="fa-regular fa-compass"></i></a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
          aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link" href="/user/<%= req.user._id %>">Home</a>
            </li>
          </ul>
          <div class="navbar-nav login-btns">
            <a class="nav-link add-notes-link upload" href="/user/<%= req.user._id %>/upload">Upload Video</a>
          </div>
          <div class="navbar-nav login-btns">
            <a class="nav-link add-notes-link" href="/user/<%= req.user._id %>/our-video">Channel</a>
          </div>
          <!-- <form id="searchForm" class="d-flex ms-auto" role="search" action="/user/<%= req.user._id %>/search" method="GET">
                    <input class="form-control search-inp" type="search" id="searchInput" name="title" placeholder="Date(MM-DD) or title" aria-label="Search">
                    <button class="btn search-btn" type="submit"><i class="fa-solid fa-magnifying-glass"></i>Search</button>
                </form> -->
          <div class="navbar-nav ms-auto login-btns">
            <% if(!currentUser){ %>
              <a class="nav-link" aria-current="page" href="/signup">Sign-up</a>
              <a class="nav-link" href="/login">Login</a>
              <% } %>
                <% if(currentUser){ %>
                  <a class="nav-link logout-link" href="/logout">Logout</a>
                  <% } %>

          </div>
        </div>
      </div>

      <script>
        if (currentUser) {
          let searchForm = document.getElementById('searchForm');
          searchForm.addEventListener('submit', function (event) {
            event.preventDefault();
            const inputValue = document.getElementById('searchInput').value;
            window.location.href = `/user/<%= req.user._id %>/search/${inputValue}`;
          });
        }
      </script>
      <% } %>
</nav>