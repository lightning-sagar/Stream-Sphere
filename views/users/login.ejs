<% layout('layout/boilerplate') %>
<style>

.glass-effect {
    background: linear-gradient(to bottom right, rgba(255, 255, 255, 0.8), rgba(255, 255, 255, 0.5));
    overflow: hidden;
}

.glass-card {
    background-color: rgba(255, 255, 255, 0.5); /* Adjust opacity for the desired effect */
    border-radius: 15px;
    backdrop-filter: blur(10px); /* Apply blur effect */
    transition: all 0.3s ease; /* Smooth transition effect */
}

.glass-card:hover {
    background-color: rgba(255, 255, 255, 0.7); /* Adjust opacity for hover effect */
}

</style>

<body class="glass-effect">
    <div class="container-fluid">
        <div class="row justify-content-center align-items-center vh-100">
            <div class="col-md-6">
                <div class="card glass-card shadow">
                    <div class="card-body p-5">
                        <h2 class="text-center mb-4">Login</h2>
                        <form class="needs-validation" novalidate method="POST" action="/login">
                            <div class="mb-3">
                                <label for="username" class="form-label">Username</label>
                                <input name="username" id="username" required class="form-control" type="text" placeholder="Enter your username" />
                                <div class="invalid-feedback">Please enter your username.</div>
                            </div>

                            <div class="mb-3">
                                <label for="password" class="form-label">Password</label>
                                <input name="password" id="password" required class="form-control" type="password" placeholder="Enter your password" />
                                <div class="invalid-feedback">Please enter your password.</div>
                            </div>

                            <button class="btn btn-primary btn-block">Login</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
